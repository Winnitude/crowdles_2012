        <div class="controls">
          <%=f.text_area :worker_terms, :rows => 5%>
        </div>
      </div>


      <div class="form-actions">
        <button type="submit" class="btn">Save</button>
        <%=link_to "Cancel", edit_platform_terms_global_admins_path, :class => "btn"%>
        <%=link_to "Close", root_path, :class => "btn"%>
      </div>

    </div>


<%end%>

