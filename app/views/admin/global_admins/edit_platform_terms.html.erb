<%= form_for @terms, :url => update_platform_terms_global_admins_path,:html => {:class => "form form-horizontal"} do |f| %>

    <div class="span9">
      <h1 class="heading margin0">Terms Of Use</h1>

      <div class="control-group">
        <label class="control-label">Platform Legal Terms</label>
        <div class="controls">
          <%=f.text_area :platform_legal_terms_global , :rows => 5%>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">User Terms</label>
