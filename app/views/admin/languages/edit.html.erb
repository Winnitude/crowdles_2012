<h1>Edit Language Details</h1>
<%=form_for @language , :url=> language_path(@language.id),:html => {:class => "form form-horizontal"} do |f| %>

    <div class="span9">





      <div class="control-group">
        <label class="control-label">Language English Name</label>
        <div class="controls">
          <%=label_tag @language.english_name  %>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label">Language ISO Code</label>
        <div class="controls">
          <%=label_tag @language.iso_code  %>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label">Language Local Name</label>
        <div class="controls">
          <%=f.text_field :local_name  %>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="input01">Is Active:<span style="color:red"> </span>*</label>
        <div class="controls">
          <%= f.radio_button :is_active, 1,:class=>"input"%>  True   </div>
        <div class="controls"> <%=f.radio_button :is_active, 0,:class=>"input"%> false  </div>
        <!--<input type="text" class="input-xlarge" id="input01">-->
        <p class="help-block"></p>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Edit</button>

      </div>
    </div>

<%end%>

<%= content_for :head do  %>
    <script type="text/javascript">

        jQuery(function(){

            var facebook =   new LiveValidation("ga_general_setting_ga_facebook",{validMessage:" ",onlyOnSubmit:true});
            facebook.add( Validate.Format , { pattern: /^(ht|f)tps?:\/\/[a-z0-9-\.]+\.[a-z]{2,4}\/?([^\s<>\#%"\,\{\}\\|\\\^\[\]`]+)?$/, failureMessage: "Must be a valid URL" });
            var twitter =   new LiveValidation("ga_general_setting_ga_twitter",{validMessage:" ",onlyOnSubmit:true});
            twitter.add( Validate.Format , { pattern: /^(ht|f)tps?:\/\/[a-z0-9-\.]+\.[a-z]{2,4}\/?([^\s<>\#%"\,\{\}\\|\\\^\[\]`]+)?$/, failureMessage: "Must be a valid URL" });

        });
    </script>
<% end %>








