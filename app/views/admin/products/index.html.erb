<div class="span9">
  <div class="span5">
    <h1>Listing products</h1>
    <%=form_tag products_path ,:method => :get, :html => { :class => "form-horizontal"} do  %>
        <table border="0" class="table">
          <tr>
            <th>Platform Product Name</th>
            <th>Type</th>
            <th>Target</th>
            <th>Status</th>

          </tr>
          <tr>
            <td><%=text_field_tag :name ,params[:name]%> </td>
            <td><%=select_tag :type ,options_for_select(["All", "AG"],params[:type]),:onchange => "this.form.submit();"%> </td>
            <td><%=select_tag :target ,options_for_select(["All", "SAG" ,"MAG"]  ,params[:target]),:onchange => "this.form.submit();"%> </td>
            <td><%=select_tag :status ,options_for_select(["All","Published", "Unpublished"],params[:status]),:onchange => "this.form.submit();"%> </td>
            <td><%=submit_tag "find"%></td>
          </tr>
          <% @products.each do |product| %>
              <tr>
                <td><%=product.platform_product_name%></td>
                <td><%=product.platform_product_type%></td>
                <td><%=product.product_target%></td>
                <td><%=product.status%></td>
              </tr>
          <% end %>
        </table>

        <br />

        <%= link_to 'New Product', new_product_path , :class => "btn primary btn-info" %>
    <%end%>
  </div>
  <div class="span4"> </div>
</div>