



<%#= render :partial => "devise/shared/links" %>


<div class="span12">
  <h2 class="mainHeading">Sign in</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html=>{:class =>"form-horizontal offset2"}) do |f| %>

      <div class="control-group">
        <%= f.label :email,:class => "control-label"%>
        <div class="controls">
          <%= f.email_field :email,:placeholder => "Email" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :password,:class => "control-label"%>
        <div class="controls">
          <%= f.password_field :password,:placeholder => "Password" %></div>
      </div>

      <%# if devise_mapping.rememberable? -%>
      <!--<div class="control">-->
      <!--<div><%#= f.check_box :remember_me %> <%= f.label :remember_me , :class=>"control-label"%></div>-->
      <!--</div>-->
      <% #end -%>


      <div class="control-group">
        <div class="controls">
          <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
      </div>
  <%end %>
</div>
