<%= form_for(@user, :url => update_password_user_registrations_path, :html => { :method => :put,:class=> "form-horizontal" }) do |f| %>
    <fieldset>
      <%= render "shared/form_errors", :object => @user %>
      <legend><h2>Set your password</h2></legend>
      <div class="control-group">
        <label class="control-label" for="input01">New password</label>
        <div class="controls">
          <%= f.password_field :password,:class=>"input" %>
          <!--<input type="text" class="input-xlarge" id="input01">-->
          <p class="help-block"></p>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="input01">Confirm new password</label>
        <div class="controls">
          <%= f.password_field :password_confirmation,:class=>"input" %>
          <!--<input type="text" class="input-xlarge" id="input01">-->
          <p class="help-block"></p>
        </div>
      </div>
      <div class="form-actions">
        <%= f.submit "Change my password",:class =>"btn btn-primary"  %>
        <a class="btn" href="/">Cancel</a>
        <!--<input type="text" class="input-xlarge" id="input01">-->
      </div>
    </fieldset>
    <%end%>

<%= content_for :head do  %>
    <script type="text/javascript">

        jQuery(function(){

            var password = new LiveValidation('user_password',{validMessage:" ",onlyOnSubmit:true});
            password.add( Validate.Presence );
            var confirm_password = new LiveValidation('user_password_confirmation',{validMessage:" ",onlyOnSubmit:true});
            confirm_password.add( Validate.Presence );
            var current_password = new LiveValidation('user_current_password',{validMessage:" ",onlyOnSubmit:true});
            current_password.add( Validate.Presence );
        });
    </script>
<% end %>


