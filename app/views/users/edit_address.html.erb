<%= render :partial =>"users/user_edit_profile_links" if (current_user.present?)%>
<div class="span9">
<h1 class="mainHeading">Address</h1>
<%=form_for current_user , :url=> update_address_user_path(@user),:html => {:class => "form form-horizontal clearfix"} do |f| %>
    <%=f.fields_for @contact  do |contact| %>



          <div class="control-group">
            <label class="control-label">Country</label>
            <div class="controls">
              <%=f.text_field :country ,:disabled => true  %>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label">City</label>
            <div class="controls">
              <%=contact.text_field :city, :placeholder=>"Enter City"  %>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label">state</label>
            <div class="controls">
              <%=contact.text_field :state, :placeholder=>"Enter State"  %>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label">Zip Code</label>
            <div class="controls">
              <%=contact.text_field :zip_code, :placeholder=>"Enter Zip Code"  %>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label">Street</label>
            <div class="controls">
              <%=contact.text_field :street, :placeholder=>"Enter Street" %>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label">Street Number</label>
            <div class="controls">
              <%=contact.text_field :street_number, :placeholder=>"Enter Street Number" %>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label">Additional Address</label>
            <div class="controls">
              <%=contact.text_field :additional_address_info, :placeholder=>"Enter Additional Address"  %>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label">Location GPS</label>
            <div class="controls">
              <%=contact.text_field :location_gps, :placeholder=>"Enter Gps Location"  %>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label">Telephone 1</label>
            <div class="controls">
              <%=contact.text_field :main_number, :placeholder=>"Enter Tel Number"  %>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label">Telephone 2</label>
            <div class="controls">
              <%=contact.text_field :secondary_number, :placeholder=>"Enter Tel Number"  %>
            </div>
          </div>


          <div class="controls">
            <button type="submit" class="btn btn-primary">Save</button>
            <%=link_to "Cancel", edit_address_user_path(@user), :class => "btn btn-primary"%>
            <%=link_to "Close", root_path, :class => "btn btn-primary"%>
          </div>


    <%end%>
<%end%>

<%= content_for :head do  %>
    <script type="text/javascript">

        jQuery(function(){

            var state =   new LiveValidation("user_user_contact_state",{validMessage:" ",onlyOnSubmit:true});
//            state.add( Validate.Presence,{failureMessage:" Can't be empty"} );
            state.add( Validate.Format , { pattern: /^[^0-9`!@#\$%\^&*+_=]+$/, failureMessage: "Field not valid" });
            var city =   new LiveValidation("user_user_contact_city",{validMessage:" ",onlyOnSubmit:true});
            city.add( Validate.Format , { pattern: /^[^0-9`!@#\$%\^&*+_=]+$/, failureMessage: "Field not valid" });
            var ph_no1 =   new LiveValidation("user_user_contact_main_number",{validMessage:" ",onlyOnSubmit:true});
            ph_no1.add( Validate.Format , { pattern: /^\+\d{1,3}\s\d{7,15}$/, failureMessage: "Should Be in ITU Format like +XX XXXXXXXXXX" });
            var ph_no2 =   new LiveValidation("user_user_contact_secondary_number",{validMessage:" ",onlyOnSubmit:true});
            ph_no2.add( Validate.Format , { pattern: /^\+\d{1,3}\s\d{7,15}$/, failureMessage: "Should Be in ITU Format like +XX XXXXXXXXXX" });


        });
    </script>
<% end %>
</div>







